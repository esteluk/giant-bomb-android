<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">
	<ImageView android:id="@+id/twitterIcon"
		android:layout_width="45sp" android:layout_height="45sp"
		android:scaleType="fitCenter" android:src="@drawable/twitter_icon" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingLeft="10sp">
		<TextView android:id="@+id/name" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="20sp" />
		<TextView android:id="@+id/role" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textStyle="italic" />
	</LinearLayout>
</LinearLayout>
